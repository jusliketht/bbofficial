# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Following Complete Production Deployment Guide
# =====================================================

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
NODE_ENV=production
PORT=3002
FRONTEND_URL=https://yourdomain.com

# =====================================================
# DATABASE CONFIGURATION (PRODUCTION)
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=burnblack_itr_production
DB_USER=burnblack_prod
DB_PASSWORD=secure_production_password_here
DB_MAX_CONNECTIONS=50
DB_MIN_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_ACQUIRE_TIMEOUT=60000
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=60000

# =====================================================
# REDIS CONFIGURATION (PRODUCTION)
# =====================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password
REDIS_DB=0

# =====================================================
# JWT CONFIGURATION (PRODUCTION)
# =====================================================
JWT_SECRET=production_super_secure_jwt_secret_key_256_bits_change_this
JWT_REFRESH_SECRET=production_super_secure_refresh_secret_key_256_bits_change_this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
ENCRYPTION_KEY=production_encryption_key_256_bits_change_this

# =====================================================
# EMAIL CONFIGURATION (PRODUCTION)
# =====================================================
RESEND_API_KEY=your_production_resend_api_key
FROM_EMAIL=ITR Filing Platform <noreply@yourdomain.com>

# =====================================================
# SECURITY CONFIGURATION (PRODUCTION)
# =====================================================
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
OTP_LENGTH=6
OTP_EXPIRY=600000
MAX_OTP_ATTEMPTS=3

# =====================================================
# RATE LIMITING CONFIGURATION (PRODUCTION)
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_AUTH_REQUESTS=10
RATE_LIMIT_MAX_OTP_REQUESTS=5

# =====================================================
# LOGGING CONFIGURATION (PRODUCTION)
# =====================================================
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/burnblack
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30d

# =====================================================
# FILE UPLOAD CONFIGURATION (PRODUCTION)
# =====================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=/var/www/burnblack/uploads

# =====================================================
# CORS CONFIGURATION (PRODUCTION)
# =====================================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# =====================================================
# SSL CONFIGURATION (PRODUCTION)
# =====================================================
SSL_CERT_PATH=/etc/ssl/certs/burnblack.crt
SSL_KEY_PATH=/etc/ssl/private/burnblack.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# =====================================================
# MONITORING CONFIGURATION (PRODUCTION)
# =====================================================
HEALTH_CHECK_INTERVAL=300000
METRICS_COLLECTION_INTERVAL=60000
AUDIT_LOG_RETENTION_DAYS=365

# =====================================================
# CACHE CONFIGURATION (PRODUCTION)
# =====================================================
CACHE_TTL_FILING_LIST=300
CACHE_TTL_USER_DASHBOARD=600
CACHE_TTL_SERVICE_TICKETS=300
CACHE_TTL_FILING_DETAILS=1800

# =====================================================
# EXTERNAL SERVICES CONFIGURATION (PRODUCTION)
# =====================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# =====================================================
# PRODUCTION CONFIGURATION
# =====================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=false
ENABLE_CORS_DEBUG=false

