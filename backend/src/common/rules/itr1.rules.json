{
  "itrType": "ITR1",
  "description": "For individuals having income from salary, one house property, other sources (interest, etc.)",
  "sections": ["personalInfo", "income", "deductions", "taxComputation"],
  "requiredFields": {
    "personalInfo": ["firstName", "lastName", "panNumber", "dateOfBirth"],
    "income": ["salary"],
    "deductions": []
  },
  "incomeSources": {
    "salary": {
      "required": true,
      "maxAmount": 999999999,
      "description": "Income from salary"
    },
    "houseProperty": {
      "required": false,
      "maxAmount": 999999999,
      "description": "Income from house property"
    },
    "otherIncome": {
      "required": false,
      "maxAmount": 999999999,
      "description": "Income from other sources"
    }
  },
  "deductions": {
    "section80C": {
      "maxAmount": 150000,
      "description": "Life insurance premium, PF, PPF, ELSS, etc."
    },
    "section80D": {
      "maxAmount": 25000,
      "description": "Medical insurance premium"
    },
    "section80G": {
      "maxAmount": 100000,
      "description": "Donations to charitable institutions"
    },
    "section80TTA": {
      "maxAmount": 10000,
      "description": "Interest on savings account"
    }
  },
  "validationRules": {
    "panNumber": {
      "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
      "required": true
    },
    "email": {
      "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
      "required": true
    },
    "phone": {
      "pattern": "^[6-9]\\d{9}$",
      "required": false
    }
  },
  "restrictions": {
    "businessIncome": false,
    "professionalIncome": false,
    "capitalGains": false,
    "foreignIncome": false,
    "agriculturalIncome": false
  }
}
