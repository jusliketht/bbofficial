{
  "itrType": "ITR4",
  "description": "For individuals and HUFs having presumptive income from business and profession",
  "sections": [
    "personalInfo",
    "presumptiveIncome",
    "otherIncome",
    "deductions",
    "taxComputation"
  ],
  "requiredFields": {
    "personalInfo": ["firstName", "lastName", "panNumber", "dateOfBirth"],
    "presumptiveIncome": [],
    "otherIncome": [],
    "deductions": []
  },
  "incomeSources": {
    "salary": {
      "required": false,
      "maxAmount": 999999999,
      "description": "Income from salary"
    },
    "presumptiveBusiness": {
      "required": false,
      "maxAmount": 2000000,
      "description": "Presumptive business income (max ₹20 lakh)"
    },
    "presumptiveProfessional": {
      "required": false,
      "maxAmount": 500000,
      "description": "Presumptive professional income (max ₹5 lakh)"
    },
    "houseProperty": {
      "required": false,
      "maxAmount": 999999999,
      "description": "Income from house property"
    },
    "otherIncome": {
      "required": false,
      "maxAmount": 999999999,
      "description": "Income from other sources"
    }
  },
  "presumptiveRules": {
    "businessIncome": {
      "presumptiveRate": 8,
      "description": "8% of gross receipts for business"
    },
    "professionalIncome": {
      "presumptiveRate": 50,
      "description": "50% of gross receipts for profession"
    },
    "maxGrossReceipts": {
      "business": 2000000,
      "professional": 500000
    }
  },
  "deductions": {
    "section80C": {
      "maxAmount": 150000,
      "description": "Life insurance premium, PF, PPF, ELSS, etc."
    },
    "section80D": {
      "maxAmount": 25000,
      "description": "Medical insurance premium"
    },
    "section80G": {
      "maxAmount": 100000,
      "description": "Donations to charitable institutions"
    },
    "section80TTA": {
      "maxAmount": 10000,
      "description": "Interest on savings account"
    },
    "section80EE": {
      "maxAmount": 50000,
      "description": "Interest on home loan for first-time home buyers"
    },
    "section80EEA": {
      "maxAmount": 150000,
      "description": "Interest on home loan for affordable housing"
    }
  },
  "validationRules": {
    "panNumber": {
      "pattern": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
      "required": true
    },
    "email": {
      "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
      "required": true
    },
    "phone": {
      "pattern": "^[6-9]\\d{9}$",
      "required": false
    }
  },
  "restrictions": {
    "businessIncome": true,
    "professionalIncome": true,
    "capitalGains": false,
    "foreignIncome": false,
    "agriculturalIncome": false,
    "presumptiveOnly": true
  }
}
